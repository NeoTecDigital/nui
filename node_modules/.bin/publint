#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/persist/repos/nui/node_modules/publint/lib/node_modules:/home/persist/repos/nui/node_modules/publint/node_modules:/home/persist/repos/nui/node_modules:/home/persist/repos/node_modules:/home/persist/node_modules:/home/node_modules:/node_modules:/home/persist/repos/nui/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/persist/repos/nui/node_modules/publint/lib/node_modules:/home/persist/repos/nui/node_modules/publint/node_modules:/home/persist/repos/nui/node_modules:/home/persist/repos/node_modules:/home/persist/node_modules:/home/node_modules:/node_modules:/home/persist/repos/nui/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../publint/lib/cli.js" "$@"
else
  exec node  "$basedir/../publint/lib/cli.js" "$@"
fi
